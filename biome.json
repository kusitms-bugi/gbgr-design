{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},

	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!!**/dist", "!!**/.next", "!!**/storybook-static"]
	},

	"formatter": {
		"enabled": true,
		"includes": ["**"]
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noImportantStyles": {
					"level": "warn"
				}
			}
		}
	},

	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
