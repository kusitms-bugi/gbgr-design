{
	"name": "gbgr-design",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"postbuild": "node scripts/sync-vercel-output.mjs",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"docs:dev": "pnpm --filter docs dev",
		"docs:build": "pnpm --filter docs build",
		"lint": "turbo run lint",
		"check": "biome check . && pnpm check:rules",
		"check:rules": "node scripts/validate-react-rules.mjs",
		"check:write": "biome check . --write",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "changeset publish",
		"typecheck": "pnpm --filter @gbgr/icons --filter @gbgr/react-headless run build && turbo run typecheck",
		"release": "turbo run build --filter=@gbgr/* && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@changesets/changelog-git": "^0.2.1",
		"@changesets/cli": "latest",
		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/react": "latest",
		"@types/react-dom": "latest",
		"jsdom": "^26.0.0",
		"turbo": "latest",
		"vitest": "^3.2.4",
		"typescript": "latest"
	},
	"packageManager": "pnpm@10.28.1",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
